						<id>attach-javadoc</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
				<configuration>				
				<!-- since the prodoc pages are really only intended for the website, we will likely move these to a reports section 					
					<doclet>prodoc.StartDoclet</doclet>
